<h1 align="center">Contact me...</h1>

<div class="row">
  <div class="col-md-12">
    
    <%= form_for(@contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Your full name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :email, class: "form-control", placeholder: "Your email address", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :message %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :message, rows: 10, class: "form-control", placeholder: "Enter article description here." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Send Message', class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>

  </div>
</div>

