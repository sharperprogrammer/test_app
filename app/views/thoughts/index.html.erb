<h1 align="center">Listing all thoughts</h1>
<% @thoughts.each do |thought| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="thought-title">
          <%= link_to thought.title, thought_path(thought) %>
        </div>
        <div class="thought-body">
          <%= truncate(thought.description, length: 100) %>
        </div>
        <div class="thought-actions">
          <%= link_to "Edit this thought", edit_thought_path(thought), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this thought", thought_path(thought), method: :delete,
data: { confirm: "Are you sure you want to delete the thought?"},
class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
