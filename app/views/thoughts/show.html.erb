<h2 align="center">Title: <%= @thought.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@thought.description) %>
  <div class="thought-actions">
    <%= link_to "Edit this thought", edit_thought_path(@thought), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this thought", thought_path(@thought), method: :delete,
data: { confirm: "Are you sure you want to delete the thought?"},
class: "btn btn-xs btn-danger" %>
    <%= link_to "View all thoughts", thoughts_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
