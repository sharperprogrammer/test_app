<h1>Edit a Thought</h1>

<% if @thought.errors.any? %>
<h2>The following errors prevented a new thought from being created</h2>
<ul>
  <% @thought.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @thought do |f| %>

  <p>
    <%= f.label :title %> </br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> </br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>